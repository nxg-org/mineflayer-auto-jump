{
    "compilerOptions": {
        "target": "ES6",
        "sourceMap": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "allowJs": false,
        "outDir": "dist/",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "incremental": true,
        "rootDir": "src/",
        "lib": ["es6", "dom", "es2019"],
    },
    "include": ["src/**/*"],
    "compileOnSave": true
}